<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>

    <%= stylesheet_link_tag "normalize", "all" %>
    <%= stylesheet_link_tag "/components/bootstrap/dist/css/bootstrap.min.css" %>

    <%= javascript_include_tag  "all" %>
    <%= javascript_include_tag  "/components/jquery/jquery.min.js" %>
    <%= javascript_include_tag  "/components/bootstrap/dist/js/bootstrap.min.js" %>
    <%= javascript_include_tag  "/components/bootstrap-progressbar/bootstrap-progressbar.min.js" %>
  </head>

  <body class="<%= page_classes %>">
    <%= yield %>
  </body>
</html>
