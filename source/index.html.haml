.container
  %h1 Mechwarrior Online Weapon Heat Simulator
  .row
    .col-md-3
      Heat Level
      .progress.vertical.wide.bottom
        #heatlevel.progress-bar.progress-bar-danger{aria: { valuemax: 30 }}

    .col-md-4
      Weapons
      %ol.weapon-list
        %li
          Small Laser
          %a{href: '#', class: 'js-fire', data: { weapon_class: 'slas'}} Fire
          %a{href: '#', class: 'js-strip'} Strip
      %a{href: '#', id: 'js-alphastrike', class: 'btn btn-danger' } Alpha Strike

    .col-md-4.armory
      %ul
        %li
          %a{href: '#', class: 'js-add-weapon', data: { weapon_name: 'Small Laser', weapon_class: 'slas' }} Add Small Laser
        %li
          %a{href: '#', class: 'js-add-weapon', data: { weapon_name: 'Medium Laser', weapon_class: 'mlas' }} Add Medium Laser
        %li
          %a{href: '#', class: 'js-add-weapon', data: { weapon_name: 'Large Laser', weapon_class: 'llas' }} Add Large Laser
        %li
          %a{href: '#', class: 'js-add-weapon', data: { weapon_name: 'PPC', weapon_class: 'ppc' }} Add PPC

  %section
    %div
      Heatsink Type
      %select#heatsink_type
        %option{value: 'single'} Single
        %option{value: 'double'} Double
    %div
      Heatsink Count
      %input{type: 'text', id: 'heatsink-count', size: 2, value: 10}
    %div
      Heat Threshold
      %span#heat-threshold
    %div
      %a{href: '#'} Heat chart

